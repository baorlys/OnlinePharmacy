
@{
    ViewData["Title"] = "BlogDetail";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


@model dynamic
@{
    var blog = Model.Blog;
    var tags = Model.BlogTags;
    var tagsStr = "";
    for(int i = 0; i<tags.Count; i++) {
        tagsStr += tags[i].Name + ", ";
    }
    tagsStr = tagsStr.Remove(tagsStr.Length - 2, 2);
}


    <!-- Blog Details Hero Begin -->
<section class="blog-details-hero set-bg" data-setbg="../../images/breadcrumb.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="blog__details__hero__text">
                        <h2>@blog.Title</h2>
                        <ul>
                            <li>Bởi @blog.Author</li>
                            <li>@blog.CreateAt.ToLongDateString()</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Blog Details Hero End -->

    <!-- Blog Details Section Begin -->
    <section class="blog-details spad">
        <div class="container">
            <div class="row">
                <partial name="_BlogSideBar" />

                <div class="col-lg-8 col-md-7 order-md-1 order-1">
                    <div class="blog__details__text">
                        <img src="~/images/blog/@blog.Thumb" alt="">
                        <p>@blog.Content</p>
                    </div>
                    <div class="blog__details__content">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="blog__details__author">
                                    <div class="blog__details__author__pic">
                                        <img src="img/blog/details/details-author.jpg" alt="">
                                    </div>
                                    <div class="blog__details__author__text">
                                        <h6>@blog.Author</h6>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="blog__details__widget">
                                    <ul>
                                    <li><span>Tags:</span> @tagsStr</li>
                                    </ul>
                                    <div class="blog__details__social">
                                        <a href="#"><i class="fa fa-facebook"></i></a>
                                        <a href="#"><i class="fa fa-twitter"></i></a>
                                        <a href="#"><i class="fa fa-google-plus"></i></a>
                                        <a href="#"><i class="fa fa-linkedin"></i></a>
                                        <a href="#"><i class="fa fa-envelope"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
