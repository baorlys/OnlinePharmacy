@{
	ViewData["Title"] = "Trang chính";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- ============================================================== -->
<!-- Sales Cards  -->
<!-- ============================================================== -->
<div class="page-wrapper">

	<div class="page-breadcrumb">
		<div class="row">
			<div class="col-12 d-flex no-block align-items-center">
				<h4 class="page-title">@ViewData["Title"]</h4>

			</div>
		</div>
	</div>

	<div class="container-fluid">
		<div class="row">
			<div class="col-md-6 col-lg-2 col-xlg-3">
				<a asp-area="Admin" asp-controller="Menus" asp-action="Index">
					<div class="card card-hover">
						<div class="box bg-cyan text-center">
							<h1 class="font-light text-white">
								<i class="mdi mdi-view-dashboard"></i>
							</h1>
							<h6 class="text-white">Menu</h6>
						</div>
					</div>
				</a>
			</div>
			<div class="col-md-6 col-lg-2 col-xlg-3">
				<a asp-area="Admin" asp-controller="Blogs" asp-action="Index">
					<div class="card card-hover">
						<div class="box bg-warning text-center">
							<h1 class="font-light text-white">
								<i class="mdi mdi-view-dashboard"></i>
							</h1>
							<h6 class="text-white">Bài viết</h6>
						</div>
					</div>
				</a>
			</div>
			<div class="col-md-6 col-lg-2 col-xlg-3">
				<a asp-area="Admin" asp-controller="Products" asp-action="Index">
					<div class="card card-hover">
						<div class="box bg-success text-center">
							<h1 class="font-light text-white">
								<i class="mdi mdi-view-dashboard"></i>
							</h1>
							<h6 class="text-white">Sản phẩm</h6>
						</div>
					</div>
				</a>
			</div>
			<div class="col-md-6 col-lg-2 col-xlg-3">
				<a asp-area="Admin" asp-controller="ProductCategories" asp-action="Index">
					<div class="card card-hover">
						<div class="box bg-danger text-center">
							<h1 class="font-light text-white">
								<i class="mdi mdi-view-dashboard"></i>
							</h1>
							<h6 class="text-white">Phân loại</h6>
						</div>
					</div>
				</a>
			</div>
			<div class="col-md-6 col-lg-2 col-xlg-3">
				<a asp-area="Admin" asp-controller="Orders" asp-action="Index">
					<div class="card card-hover">
						<div class="box bg-info text-center">
							<h1 class="font-light text-white">
								<i class="mdi mdi-view-dashboard"></i>
							</h1>
							<h6 class="text-white">Đơn hàng</h6>
						</div>
					</div>
				</a>
			</div>
			<div class="col-md-6 col-lg-2 col-xlg-3">
				<a asp-area="Admin" asp-controller="Customers" asp-action="Index">
					<div class="card card-hover">
						<div class="box bg-cyan text-center">
							<h1 class="font-light text-white">
								<i class="mdi mdi-view-dashboard"></i>
							</h1>
							<h6 class="text-white">Khách hàng</h6>
						</div>
					</div>
				</a>
			</div>
		</div>


	</div>

</div>